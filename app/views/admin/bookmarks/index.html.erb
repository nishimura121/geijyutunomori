
<% if @bookmarks.present? %>
 <p>お気に入りリスト(全<%= @bookmarks.count %>件)</p>
  <table>

    <% @bookmarks.each.with_index(1) do | bookmark, i| %>
      <tr>
        <td><%= link_to  admin_item_path(bookmark.item) do %>
            <%= attachment_image_tag bookmark.item, :image, :fill, 180, 180 %></td>
              <% end %>
         <td width=100 align=center><%= link_to bookmark.item.name, admin_item_path(bookmark.item) %></td>
         <td width=100 align=center><%= link_to bookmark.item.user.name, admin_user_path(bookmark.item.user) %></td>
         <td width=300 align=center><%= link_to "お気に入りから外す", admin_item_bookmarks_path(bookmark.item.id), method: :delete%></td>
      </tr>
    <% end %>
    <% else %>
    お気に入り作品は現在ありません
   <% end %>
  </table>
<%= paginate @bookmarks %>