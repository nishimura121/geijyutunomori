<div class="row">
  <div class="col-xl-7">
    <div style="min-height: 8vh;">
      <h3 class="mb-4">会員編集</h3>
    </div>

    <%= form_for(@user ,url:admin_user_path) do |f| %>
    <div class="form-group row">
      <%= f.label :name, "氏名", class:"col-sm-3 col-form-label" %>
      <%= f.text_field :name, value:"#{@user.name}",class:"col-sm-4" %>
    </div>

    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class:"col-sm-3 col-form-label" %>
      <%= f.email_field :email,value:"#{@user.email}", class:"col-sm-9" %>
    </div>

    <div class="form-group row">
      <%= f.label :age, "年齢", class:"col-sm-3 col-form-label" %>
      <%= f.text_field :age, value:"#{@user.age}", class:"col-sm-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :address, "住所", class:"col-sm-3 col-form-label" %>
      <%= f.text_field :address, value:"#{@user.address}", class:"col-sm-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :HP, "HP", class:"col-sm-3 col-form-label" %>
      <%= f.text_field :hp_address, value:"#{@user.address}", class:"col-sm-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :sns_address, "sns_address", class:"col-sm-3 col-form-label" %>
      <%= f.text_field :sns_address, value:"#{@user.sns_address}", class:"col-sm-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :self_introduction, "自己紹介", class:"col-sm-3 col-form-label" %>
      <%= f.text_field :self_introduction, value:"#{@user.self_introduction}", class:"col-sm-9" %>
    </div>

    <div class="form-group row">
      <p class="col-sm-3 col-form-label">会員ステータス</p>
      <div class="radio-inline col-sm-3">
        <%= f.radio_button :is_cancel, 0 ,{:checked => true} %>
        <label class="col-form-label"> 有効会員</label>
      </div>

      <div class="radio-inline col-sm-3">
        <%= f.radio_button :is_cancel, 1 %>
        <label class="col-form-label"> 退会済み会員</label>
      </div>
    </div>

    <div class="form-group row">
      <%= f.submit "変更を保存する", class:"btn btn-secondary text-white", style:"margin:0 auto;" %>
    </div>

  <% end %>
  </div>
</div>

