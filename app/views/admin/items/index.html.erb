<h1>投稿作品一覧画面</h1>


<table class="table table=striped">
           <thead>
             <tr>
               <th class="col-md-2">ID</th>
              <th class="col-md-5">投稿画像</th>
              <th class="col-md-3">商品名</th>
              <th class="col-md-1">ジャンル</th>
            </tr>
          </thead>
          <% @items.each.each.with_index(1) do | item, i | %>
            <tbody>
              <tr>

              	<td>
                  <% if params[:page].nil? %>
                    <%= i %>
                  <% else %>
                    <%= i + (params[:page].to_i - 1) * 3 %>
                  <% end %>
                </td>
                <td><%= link_to admin_item_path(item) do %>
                  <%= attachment_image_tag item, :image, :fill, 150, 150 %></td>
                  <% end %>
                <td> <%= link_to item.name,admin_item_path(item) %> </td>
                <td> <%= item.genre.name %> </td>
              </tr>
          </tbody>
          <% end %>
        </table>
<%= paginate @items %>



