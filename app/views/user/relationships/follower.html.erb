<h3>フォロワー</h3>
<% if @users.count > 0 %>
  <table class='table'>

    <% @users.each do |user| %>
      <tr>
        <td style="width: 10%;"><%= link_to admin_user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", style: "width: 50px; height: 50px;" %>
            <% end %></td>
        <td style="width: 15%;"><%= link_to user.name,admin_user_path(user) %></td>
        <td style="width: 15%;">
      <% if current_user.following?(user) %>
        <%= link_to 'フォローを外す', user_relationships_path(user.id), method: :delete %>
      <% else %>
        <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST %>
       <% end %>
        </td>
      </tr>
    <% end %>
  </table>

  <% else %>
   <p>フォローしている人はいません</p>
  <% end %>
<div class="bottom">
<%= paginate @users %>
</div>


<style>
.bottom{
  float:right;
}


</style>


