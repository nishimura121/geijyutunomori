<th>プロフィール画像</th>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", style: "width: 100px; height: 100px;"  %>

<table class="table">
          <tbody>
            <tr>
              <th>名前</th>
              <th><%=@user.name %></th>
            </tr>
              <tr>
              <th>性別</th>
              <th><%=@user.sex %></th>
            </tr>
            <tr>
              <th>年齢</th>
              <th><%=@user.age %></th>
            </tr>
            <tr>
              <th>住所</th>
              <th><%=@user.prefecture %></th>
            </tr>
            <tr>
            <th>HP</th>
            <th><%=@user.hp_address %></th>
            </tr>

              <tr>
              <th>SNS</th>
              <th><%=@user.sns_address %></th>
            </tr>
             <tr>
              <th>自己紹介</th>
              <th><%=@user.self_introduction %></th>
            </tr>

           </tbody>
</table>

<% if current_user.id == @user.id %>
<p>
<%=link_to 'プロフィール編集',edit_user_registration_path %>
</p>
<% end %>

<h3>投稿作品一覧</h3>
<% if @items.present? %>
<% @items.each do |item| %>
<%= link_to item_path(item) do %>
<%= attachment_image_tag item,:image %>
<% end %>
<%= link_to item.name,item_path(item) %>


<% if current_user.id == @user.id %>
<%= link_to '投稿作品編集',edit_item_path(item) %>
<% end %>
<% end %>

<% else %>
<p>投稿作品はありません</p>
<% end %>









