

<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3">
    <%= f.label :名前 %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", size: 30 %>
  </div>


  <div class="field mb-1">
          <%= f.label :性別 %><br />
          <%= f.label :男性 %>
          <%= f.radio_button :sex, "男性" %>
          <%= f.label :女性 %>
          <%= f.radio_button :sex, "女性" %>
  </div>

  <div class="field mb-1">
    <%= f.label :年齢 %><br />
    <%= f.number_field :age, autofocus: true, autocomplete: "age", min: 15, max: 100 %>
  </div>

  <div class="field mb-1">
    <%= f.label :住所 %><br />
    <%= f.select :prefecture, User.prefectures.keys %>
  </div>

  <div class="field mb-1">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field mb-1">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field mb-1">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions mt-4 mb-4">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

すでに登録済みの方
<p><%= link_to'こちら',new_user_session_path %>からログインしてください。</p>


