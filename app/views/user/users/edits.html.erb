<div class="row">
  <div class="col-xl-7">
    <div style="min-height: 8vh;">
      <h3 class="mb-4">会員編集</h3>
    </div>

    <%= form_for(@user ,url:user_path(@user)) do |f| %>
    <div class="form-group row">
      <%= f.label :name, "氏名", class:"col-sm-3 col-form-label" %>
      <%= f.text_field :name, value:"#{@user.name}",class:"col-sm-4" %>
    </div>

    <div class="form-group row">
      <%= f.label :email, "メールアドレス", class:"col-sm-3 col-form-label" %>
      <%= f.email_field :email,value:"#{@user.email}", class:"col-sm-9", size:40 %>
    </div>

    <div class="form-group row">
      <%= f.label :age, "年齢", class:"col-sm-3 col-form-label" %>
      <%= f.number_field :age, value:"#{@user.age}", class:"col-sm-3", min: 15, max: 100 %>
    </div>

    <div class="form-group row">
    <%= f.label :住所, "住所", class:"col-sm-3 col-form-label" %>
    <%= f.select :prefecture, User.prefectures.keys, class:"col-sm-3" %>
    </div>

    <div class="form-group row">
      <%= f.label :HP, "HP", class:"col-sm-3 col-form-label" %>
      <%= f.email_field :hp_address, value:"#{@user.hp_address}", class:"col-sm-9" %>
    </div>

    <div class="form-group row">
      <%= f.label :sns_address, "SNS", class:"col-sm-3 col-form-label" %>
      <%= f.email_field :sns_address, value:"#{@user.sns_address}", class:"col-sm-9" %>
    </div>

    <div class="form-group row">
      <%= f.label :self_introduction, "自己紹介", class:"col-sm-3 col-form-label" %>
      <%= f.text_area :self_introduction, value:"#{@user.self_introduction}", class:"col-sm-9", size: "30x20" %>
    </div>

    <div class="form-group row">
      <%= f.submit "変更を保存する", class:"btn btn-primary text-white", style:"margin:15px auto;" %>
    </div>

    <% end %>
  </div>
</div>
<div class="text-right">
<p><%= link_to "退会する", cancels_users_path, class:"btn btn-danger text-white",style:"text-decoration:none; font-size:12px;" %></p>
</div>




