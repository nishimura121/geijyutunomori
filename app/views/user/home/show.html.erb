 text-align:center;
}

.slider img{
 object-fit:cover;
 width:100%;
 height:calc(100vh);
 margin: 0 auto;
 text-align:center;
}
.slider img.coverPosition{
 object-position:100% 50%;
}
.m-2{
 color:#000000;
}
.col-xl{
 background-color:#fffaf0;
