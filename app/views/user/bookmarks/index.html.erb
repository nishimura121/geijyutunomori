

<p>お気に入りリスト</p>
  <table>
    <tr>
    <td></td>
    <td></td>
    <td align=center>作品名</td>
    <td align=center>投稿者名</td>
    <td></td>
    </tr>

  <% if @bookmarks.present? %>
    <% @bookmarks.each.with_index(1) do | bookmark, i| %>
      <tr>
        <% if params[:page].nil? %>
        <td><%= i %></td>
        <% else %>
        <td><%= i + (params[:page].to_i - 1) * 10 %></td>
        <% end %>
        <td><%= link_to  item_path(bookmark.item) do %>
            <%= attachment_image_tag bookmark.item, :image, :fill, 180, 180 %></td>
              <% end %>
         <td width=100 align=center><%= link_to bookmark.item.name, item_path(bookmark.item) %></td>
         <td width=100 align=center><%= link_to bookmark.item.user.name, user_path(bookmark.item.user) %></td>
         <td width=300 align=center><%= link_to "お気に入りから外す", item_bookmarks_path(bookmark.item.id), method: :delete%></td>
      </tr>
    <% end %>
    <% else %>
    お気に入り作品は現在ありません
   <% end %>
  </table>
<%= paginate @bookmarks %>


