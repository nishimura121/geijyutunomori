<i class="fas fa-crown">ランキング</i>


<% @genres.each do |genre| %>
      <%= link_to ranking_items_path(genre_id: genre.id) do %>
          <%= genre.name %>
<% end %>
<% end %>


<table>
<% if @items.present? %>
    <% @items.each.with_index(1) do | item, i| %>
  <tr>
      <td><%= i %></td>
      <td><%= link_to item_path(item) do %>
          <%= attachment_image_tag item, :image, :fill, 180, 180 %></td>
            <% end %>
       <td><%= link_to item.name,item_path(item) %></td>
       <td><%= link_to item.user.name,user_path(item.user) %></td>

  </tr>
    <% end %>
<% else %>
投稿作品は現在ありません
<% end %>
</table>





