


<div class="container">
  <div class="row">
<div class="col-md-3">
<%= @genre.name %>

<table>
<p><strong>プロフィール</strong></p>
    <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", style: "width: 100px; height: 100px;"  %></br>
    </tr>
     <p><tr><strong><%= @user.name %></strong></tr></p>
     <tr><% if @user.self_introduction.present? %>
      <%= @user.self_introduction %></tr>
      <% else %>
      <p>自己紹介はまだありません。</p>
      <% end %>
    </div>

      <tr>
        <th>フォロー数</th>
          <th><%= link_to @user.follower.count, follows_user_path(@user) %></th>
        </tr>
        <tr>
          <th>フォロワー数</th>
          <th><%= link_to @user.followed.count, followers_user_path(@user) %></th>
        </tr>
        <tr>
          <th>お気に入り</th>
          <th><%= link_to  icon('far', 'star'),user_bookmarks_path(@user) %></th>
        </tr>
      </table>

      <div class="col-md-9">
       <h1>作品一覧</h1>


      <%= link_to 'ランキング',ranking_items_path %>

      <div style="width: 100%;">
        <%= link_to '投稿する',new_item_path, class:"ml-3" %>
      </div>

    <table class = "table table-striped">
      <% @items.each do | item | %>
        <tr>
          <td><%= link_to item_path(item) do %>
            <%= attachment_image_tag item,:image %></td>
            <% end %>
          <td><%= link_to item.name, item_path(item) %></td>
          <td><%= link_to item.user.name, user_path(item.user) %></td>
        </tr>
        <% else %>
        <% end %>
     </table>
       <%= paginate @items %>
    </div>
  </div>
</div>



